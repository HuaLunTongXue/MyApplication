<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="borderRadius" format="dimension" />
    <attr name="topLeft" format="dimension" />
    <attr name="type">
        <enum name="circle" value="0" />
        <enum name="round" value="1" />
    </attr>
    <attr name="src" format="reference"/>

    <declare-styleable name="CornerView">
        <attr name="borderRadius"   />
        <attr name="src" />
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="borderRadius"   />
        <attr name="type" />
        <attr name="src" />
        <attr name="topLeft" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="CCornerWhich">
            <enum name="CAll" value="0"/>
            <enum name="CTopLeft" value="1"/>
            <enum name="CTopRight" value="2"/>
            <enum name="CBottomLeft" value="3"/>
            <enum name="CBottomRight" value="4"/>
        </attr>
        <attr name="CCornerRadius" format="dimension" />
        <attr name="CBackground" format="reference|color" />
    </declare-styleable>



    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />

    </declare-styleable>
    <style name="Widget_GifView"></style>



</resources>